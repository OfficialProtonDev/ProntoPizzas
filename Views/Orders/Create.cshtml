@model ProntoPizzas.Models.OrderCreateViewModel

@{
    ViewData["Title"] = "Create";
    var products = Model.Products;
    var orderProducts = Model.OrderProducts;
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group input-section">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group input-section">
                <label asp-for="Order.CustomerName" class="control-label"></label>
                <input asp-for="Order.CustomerName" class="form-control" />
                <span asp-validation-for="Order.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group input-section">
                <label asp-for="Order.DeliveryAddress" class="control-label"></label>
                <input asp-for="Order.DeliveryAddress" class="form-control" />
                <span asp-validation-for="Order.DeliveryAddress" class="text-danger"></span>
            </div>
            <div class="form-group input-section">
                <div id="pizza-rows">
                    @for (int i = 0; i < Model.OrderProducts.Count; i++)
                    {
                        <div class="order-row">
                            <select asp-for="OrderProducts[i].PizzaId" asp-items="Model.PizzaSelectList"></select>
                            <select asp-for="OrderProducts[i].Size">
                                <option value="Small">Small</option>
                                <option value="Medium">Medium</option>
                                <option value="Large">Large</option>
                            </select>
                            <input asp-for="OrderProducts[i].Quantity" type="number" min="1" />
                            <span asp-validation-for="OrderProducts[i].Quantity" class="text-danger"></span>
                            <button type="button" class="btn btn-danger" onclick="removeRow(this)">Remove</button>
                        </div>
                    }
                </div>
                <button type="button" class="btn btn-secondary" onclick="addRow()">Add Pizza</button>
            </div>
            @{
                var statuses = new[] { "Preparing", "Baking", "Delivering", "Delivered", "Cancelled" };
            }
            <div class="form-group input-section">
                <label asp-for="Order.OrderStatus" class="control-label"></label>
                <select asp-for="Order.OrderStatus" class="form-control">
                    @foreach (var s in statuses)
                    {
                        if (s == Model.Order.OrderStatus)
                        {
                            <option value="@s" selected>@s</option>
                        }
                        else
                        {
                            <option value="@s">@s</option>
                        }
                    }
                </select>
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group submit-button">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="crud-link" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/order-create.js"></script>
}
