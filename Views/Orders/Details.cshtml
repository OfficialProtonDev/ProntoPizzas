@model ProntoPizzas.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt class="col-sm-2">Products</dt>
        <table class="table">
            <thead>
                <tr>
                    <th>Pizza</th>
                    <th>Size</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var op in Model.OrderProducts)
                {
                    <tr>
                        <td>@op.Product.PizzaName</td>
                        <td>@op.Size</td>
                        <td>@op.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>
</div>
<div>
    <a class="crud-link" asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a> |
    <a class="crud-link" asp-action="Index">Back to List</a>
</div>
